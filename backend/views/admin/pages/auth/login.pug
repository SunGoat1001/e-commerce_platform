extends ../../layout/auth.pug
include ../../mixins/alert.pug

block main
    //- Container chính của form
    .login-card
        .login-header
            //- Bạn có thể thêm logo ở đây nếu muốn: img(src="/logo.png" width="80")
            h1 Sign in
            p Continue to Admin Dashboard

        +alert-success(5000)
        +alert-error(5000)

        form(
            action=`/${prefixAdmin}/auth/login`
            method="POST"
        )
            .form-group.mb-4
                //- Google thường ít dùng Label bên ngoài, nhưng để UX tốt ta vẫn giữ
                label(for="email") Email
                input#email.form-control(
                    type="email" 
                    name="email" 
                    placeholder="Enter your email" 
                    required
                )

            .form-group.mb-4
                label(for="password") Password
                input#password.form-control(
                    type="password" 
                    name="password" 
                    placeholder="Enter your password" 
                    required
                )

            .d-grid.mb-3
                button.btn.btn-google-style.w-100(type="submit") Next

            .text-center
                a.forgot-password-link(href=`/${prefixAdmin}/auth/forgot-password`) Forgot password?