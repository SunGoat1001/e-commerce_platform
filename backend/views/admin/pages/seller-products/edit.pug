extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
    h1 Edit Product
    +alert-error(5000)

    form(
        action=`/${prefixAdmin}/seller/products/edit/${product._id}?_method=PATCH`
        method="POST"
        id="form-edit-product"
        enctype="multipart/form-data"
    )
        .row.g-3
            .col-6
                .form-group
                    label(for="title") Title *
                    input.form-control(type="text" name="title" id="title" value=product.title required)
            .col-6
                .form-group
                    label(for="product_category_id") Category
                    select.form-control(name="product_category_id" id="product_category_id")
                        option(value="") Select Category
                        each category in categories
                            if product.product_category_id && product.product_category_id._id.toString() === category._id.toString()
                                option(value=category._id selected) #{category.title}
                            else
                                option(value=category._id) #{category.title}
            .col-12
                .form-group
                    label(for="description") Description
                    textarea.form-control.textarea-tinymce(name="description" id="description" rows="3")= product.description

            .col-6
                .form-group
                    label(for="brand") Brand
                    input.form-control(type="text" name="brand" id="brand" value=product.brand)

            .col-4
                .form-group
                    label(for="price") Price *
                    input.form-control(type="number" step="0.01" name="price" id="price" value=product.price required)

            .col-4
                .form-group
                    label(for="discountPercentage") Discount (%)
                    input.form-control(type="number" step="0.01" name="discountPercentage" id="discountPercentage" value=product.discountPercentage || 0)

            .col-4
                .form-group
                    label(for="stock") Stock *
                    input.form-control(type="number" name="stock" id="stock" value=product.stock required)

            .col-6
                div(
                    class="form-group image-preview" 
                    upload-image
                )
                    label(for="thumbnail") Thumbnail
                    input.form-control(type="file" name="thumbnail" id="thumbnail" accept="image/*" upload-image-input)
                    if product.thumbnail
                        img.form-img-preview(src=product.thumbnail upload-image-preview)
                    else
                        img.form-img-preview(src="" upload-image-preview)
                    button.close-button(type="button" upload-image-remove class=product.thumbnail ? "" : "d-none") X

            .col-6
                .form-group
                    label(for="status") Status
                    select.form-control(name="status" id="status")
                        option(value="active" selected=product.status === 'active') Active
                        option(value="inactive" selected=product.status === 'inactive') Inactive

            .col-12
                .form-group
                    label Existing Images
                    if product.images && product.images.length
                        .d-flex.flex-wrap.gap-3
                            each image, i in product.images
                                .text-center.me-3.mb-3
                                    img(src=image alt="Product Image" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;")
                                    .form-check.mt-2
                                        - const removeId = 'remove-' + i
                                        input.form-check-input(type="checkbox" name="removeImages" id=removeId value=image)
                                        label.form-check-label(for=removeId) Remove
                    else
                        p.text-muted No images uploaded

            .col-12
                div(
                    class="form-group"
                    upload-image-multiple
                )
                    label(for="images") Add Images
                    input.form-control(type="file" name="images" id="images" accept="image/*" upload-image-input multiple)
                    .image-preview-container
                        //- New image previews will appear here

            .col-12.text-end.mt-4
                a.btn.btn-secondary.me-2(href=`/${prefixAdmin}/seller/products`) Cancel
                button.btn.btn-primary(type='submit') Update Product

    script(src="/admin/js/tinymce-config.js")
    script(src="/admin/js/upload-image.js")
    script(src="/admin/js/upload-multiple-image.js")
